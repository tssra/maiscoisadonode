<%- include('../partials/header') %>

<main class="container d-flex flex-column flex-fill justify-content-center">
    <h1  class="text-center">Página de edição de Usuários</h1>
    <form action="/usuarios/<%= usuario.id %>" method="POST">
        <div class="mb-3">
  <label for="inputNome" class="form-label fs-2 mt-2">Nome de Usuário</label>
  <input
    type="text"
    id="inputNome"
    class="form-control form-control-lg"
    placeholder="Digite o nome de usuário"
    name="usuario"
    required
    value="<%= usuario.usuario %>"
  />
   </div>

  <label for="inputEmail" class="form-label fs-2 mt-2">Email</label>
  <input
    type="email"
    id="inputEmail"
    class="form-control form-control-lg"
    placeholder="Digite seu Email"
    name="email"
    required
    value="<%= usuario.email %>"
  />

  <label for="inputSenha" class="form-label fs-2 mt-2">Senha</label>
  <input
    type="password"
    id="inputSenha"
    class="form-control form-control-lg"
    placeholder="Digite sua Senha"
    name="senha"
    required
    value="<%= usuario.senha %>"
  />

 <label class="form-label fs-2 mt-2"> Tipo de usuário </label>
      <select name="tipo" class="form-select form-select-lg mb-3" >
        <option value="Funcionário" <%= usuario.tipo === "Funcionário" ? "selected" : "" %>> 
            Funcionário 
        </option>
        <option value="Gerente" <%= usuario.tipo === "Gerente" ? "selected" : "" %>> 
            Gerente 
        </option>
        <option value="Administrador" <%= usuario.tipo === "Administrador" ? "selected" : "" %>> 
            Administrador 
        </option>
      </select>

   <button  type="submit" class="btn btn-lg btn-primary" >
        Editar
       </button>
 
  </form>
</main>
<%- include('../partials/footer') %>