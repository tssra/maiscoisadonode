<%- include('../partials/header') %>

<main class="d-flex flex-column flex-fill text-center justify-content-center">
  <div
    class="w-50 mx-auto align-content-center bg-success"
    style="height: 300px"
  >
    <% if (tipo === "cadastro") { %>

    <h1 class="text-white">Cadastro de <%- produtoNovo.nome %> realizado</h1>

    <% } else if (tipo === "edicao") { %>
    <h1 class="text-white">Edição de <%- atualizado.produto %> confirmado</h1>

    <% } else { %>
    <h1 class="text-white">Produto<%- deletado.produto %>excluído</h1>
    <% } %>

    <a href="/produtos">
      <button class="btn btn-lg btn-secondary mx-2">
        Voltar para a lista de produtos
      </button>
    </a>

    <a href="/produtos/cadastroProdutos">
      <button class="btn btn-lg btn-primary mx-2">
        Voltar para a página de cadastro
      </button>
    </a>
  </div>
</main>

<%- include('../partials/footer') %>
