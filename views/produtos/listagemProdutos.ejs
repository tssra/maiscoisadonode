<%- include('../partials/header') %>


<main>
<h1>lista de Produtos</h1>

 <a href="/produtos/cadastrar">
        <button class="btn btn-lg btn-primary">
            <i class="bi bi-bookmark-heart"></i>
            Cadastrar
        </button>
    </a>

<% if (produtos && produtos.length > 0) { %>
 <!-- criando a tabela -->
  <table class="table table-striped table-hover  align-middle mt-5" >
    <!-- cabeçalho da tabela -->
    <thead class="table-white" >
        <tr class="text-center" >
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Descrição</th>
            <th scope="col">Preço</th>
            <th scope="col">Quantidade</th>
             <th scope="col">Categora</th>
            <tr>
    </thead>
 <!-- corpo da tabela -->
    <tbody>
        <!-- usuando a função foreach para percorrer o array de usuarios -->
       <%produtos.forEach((produto) => { %>
            <tr>
                <td> <%= produto.id %> </td>
                <td> <%= produto.nome %> </td>
                <td> <%= produto.descricao %> </td>
                <td> <%= produto.preco %> </td>
                <td> <%= produto.quantidade %> </td>
                 <td> <%= produto.categoria %> </td>
            </tr>
      <% }) %>
    </tbody>
</table>
  <% } else { %>
        <!-- mostra uma mensagem, caso não tenha nenhum usuário cadastrado -->
     <div class="alert alert-warning text-center mt-5" >
        Nenhum Produto cadastrado no momento.
     </div>
<% } %>

</main>

<%- include('../partials/footer') %>